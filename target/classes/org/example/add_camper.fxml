<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ControllerAddCamper">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label text="Add Camper">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="38.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Last Name" />
                  <TextField fx:id="tfLastName" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="46.0" prefHeight="38.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <Label text="First Name" />
                  <TextField fx:id="tfFirstName" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="65.0" prefHeight="38.0" prefWidth="600.0" spacing="25.0">
               <children>
                  <Label text="Contact" />
                  <TextField fx:id="tfContact" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="36.0" prefWidth="600.0" spacing="10.0">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
               <children>
                  <Label text="Comments" />
                  <TextField fx:id="tfComments" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="36.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Button fx:id="btnAddCamper" mnemonicParsing="false" text="Add Camper" onAction="#addCamper" />
                  <Button fx:id="btnGoBack" mnemonicParsing="false" onAction="#switchToCampers" text="Go Back" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
